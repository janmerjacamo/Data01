<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_lead_kanban_view_inherited" model="ir.ui.view">
        <field name="name">crm.lead.kanban.inherited</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <!-- Target the <strong> element containing the name field -->
            <xpath expr="//field[@name='name']" position="after">
                <!-- Add a button to open the form view -->
                <button type="object" name="action_open_form_view"
                        class="btn btn-primary btn-sm ms-2" icon="fa-arrow-right"/>
            </xpath>
        </field>
    </record>
</odoo>
