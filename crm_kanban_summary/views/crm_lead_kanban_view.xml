<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_lead_kanban_summary" model="ir.ui.view">
        <field name="name">crm.lead.kanban.summary</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" js_class="crm_kanban_summary">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="name"/>
                            <field name="expected_revenue"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
